{% extends 'base.html.twig' %}

{% block body %}
    <div class="container" style="padding-top: 100px;">
        <h1>Галерия</h1>
        <a href="{{ path('admin_gallery_new') }}" class="btn btn-primary" style="margin-bottom: 20px;">+ Нова Снимка</a>

        <table class="table">
            <thead>
            <tr>
                <th>Снимка</th>
                <th>Заглавие</th>
                <th>Категория</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            {% for image in images %}
                <tr>
                    <td><img src="{{ image.filename|image_url }}" style="height: 50px;"></td>
                    <td>{{ image.title }}</td>
                    <td>{{ image.category }}</td>
                    <td>
                        <form method="post" action="{{ path('admin_gallery_delete', {'id': image.id}) }}" onsubmit="return confirm('Изтриване?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.id) }}">
                            <button class="btn btn-danger btn-sm">Изтрий</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="4">Няма снимки.</td></tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}