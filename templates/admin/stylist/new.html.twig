{% extends 'base.html.twig' %}

{% block title %}Нов Стилист{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h2 class="h4 mb-0">Добавяне на Стилист</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}

                        <div class="mb-3">
                            {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.specialization, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.bio, {'attr': {'class': 'form-control', 'rows': '3'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="card bg-light mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Услуги</h5>
                                <p class="text-muted small">Изберете кои услуги може да извършва този служител:</p>
                                <div class="form-check">
                                    {# Това автоматично генерира списъка с чекбоксове #}
                                    {{ form_widget(form.services) }}
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success">Запази</button>
                        <a href="{{ path('admin_stylists_index') }}" class="btn btn-secondary">Назад</a>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}