{% extends 'base.html.twig' %}

{% block title %}Управление на Услуги{% endblock %}

{% block body %}
    <div class="container" style="padding-top: 120px;">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
            <h1>Нашите Услуги</h1>
            {# Бутонът води към страницата 'new', където е формата #}
            <a href="{{ path('admin_services_new') }}" class="btn btn-primary" style="background-color: #d4af37; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;">+ Добави Услуга</a>
        </div>

        <table style="width: 100%; border-collapse: collapse; background: white;">
            <thead>
            <tr style="background: #f8f9fa; border-bottom: 2px solid #eee;">
                <th style="padding: 15px;">Снимка</th>
                <th style="padding: 15px;">Заглавие</th>
                <th style="padding: 15px;">Цена</th>
                <th style="padding: 15px;">Действия</th>
            </tr>
            </thead>
            <tbody>
            {% for service in services %}
                <tr style="border-bottom: 1px solid #eee;">
                    <td style="padding: 10px;">
                        {# Display service image from Cloudinary #}
                        <img src="{{ service.imageFilename }}" style="width: 60px; height: 60px; object-fit: cover; border-radius: 4px;">
                    </td>
                    <td style="padding: 10px;">{{ service.title }}</td>
                    <td style="padding: 10px;">{{ service.price }}</td>
                    <td style="padding: 10px;">
                        <form method="post" action="{{ path('admin_services_delete', {'id': service.id}) }}" onsubmit="return confirm('Сигурни ли сте?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
                            <button type="submit" style="color: red; background: none; border: none; cursor: pointer;">Изтрий</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="4" style="padding: 20px; text-align: center;">Няма добавени услуги.</td></tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}