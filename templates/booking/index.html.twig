    <script>
        const RECAPTCHA_ENABLED = {{ recaptcha_enabled ? 'true' : 'false' }};
        const RECAPTCHA_SITE_KEY = '{{ recaptcha_site_key }}';

        // Booking state
        const bookingData = {
            date: null,
            time: null,
            serviceId: null,
            stylistId: null,
            serviceName: null,
            stylistName: null,
            duration: null,
            price: null
        };

        let currentWeekStart = new Date();
        currentWeekStart.setHours(0, 0, 0, 0);

        // Set to start of week (Monday)
        const day = currentWeekStart.getDay();
        const diff = currentWeekStart.getDate() - day + (day === 0 ? -6 : 1);
        currentWeekStart.setDate(diff);

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            renderWeek();
            setupNavigationListeners();
            setupSelectionListeners();
        });

        function renderWeek() {
            const today = new Date();
            today.setHours(0, 0, 0, 0);

            const monthNames = ["January", "February", "March", "April", "May", "June",
                "July", "August", "September", "October", "November", "December"];
            const dayNames = ["Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"];

            // Update month display
            document.getElementById('currentMonth').textContent =
                monthNames[currentWeekStart.getMonth()] + ' ' + currentWeekStart.getFullYear();

            // Update week range
            const weekEnd = new Date(currentWeekStart);
            weekEnd.setDate(weekEnd.getDate() + 6);
            document.getElementById('weekRange').textContent =
                `${currentWeekStart.getDate()} - ${weekEnd.getDate()} ${monthNames[weekEnd.getMonth()]}`;

            // Render dates
            const dateGrid = document.getElementById('dateGrid');
            dateGrid.innerHTML = '';

            for (let i = 0; i < 7; i++) {
                const date = new Date(currentWeekStart);
                date.setDate(date.getDate() + i);

                const isPast = date < today;
                const isSelected = bookingData.date === date.toISOString().split('T')[0];

                const dateCard = document.createElement('div');
                dateCard.className = 'date-card';
                if (isPast) dateCard.classList.add('disabled');
                if (isSelected) dateCard.classList.add('selected');

                dateCard.innerHTML = `
                    <div class="date-day">${dayNames[date.getDay()]}</div>
                    <div class="date-number">${date.getDate()}</div>
                    <div class="date-month">${monthNames[date.getMonth()]}</div>
                `;

                if (!isPast) {
                    dateCard.onclick = () => selectDate(date);
                }

                dateGrid.appendChild(dateCard);
            }

            // Enable/disable navigation buttons
            document.getElementById('prevWeek').disabled = currentWeekStart <= today;
        }

        function selectDate(date) {
            // FIX: Use local date string to avoid timezone issues
            const year = date.getFullYear();
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const day = String(date.getDate()).padStart(2, '0');
            bookingData.date = `${year}-${month}-${day}`;
            bookingData.time = null; // Reset time when date changes

            // Update UI
            document.querySelectorAll('.date-card').forEach(card => {
                card.classList.remove('selected');
            });
            event.currentTarget.classList.add('selected');

            document.getElementById('continueToService').disabled = false;
        }

        async function loadTimeSlots() {
            if (!bookingData.serviceId || !bookingData.stylistId || !bookingData.date) {
                return;
            }

            const container = document.getElementById('timeSlots');
            container.innerHTML = '<div class="loading-message"><div class="loading" style="display: inline-block; margin-right: 10px;"></div>Loading available times...</div>';

            // Update selected date display (FIX: Parse as local date)
            const [year, month, day] = bookingData.date.split('-');
            const date = new Date(year, month - 1, day);
            const dateStr = date.toLocaleDateString('en-US', {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });
            document.getElementById('selectedDateDisplay').textContent = dateStr;

            // Check if selected date is today
            const today = new Date();
            today.setHours(0, 0, 0, 0);
            const selectedDate = new Date(year, month - 1, day);
            selectedDate.setHours(0, 0, 0, 0);
            const isToday = selectedDate.getTime() === today.getTime();

            try {
                // Fetch available slots
                const response = await fetch(
                    `/booking/api/available-slots?stylist_id=${bookingData.stylistId}&service_id=${bookingData.serviceId}&date=${bookingData.date}`
                );
                const data = await response.json();

                if (data.error) {
                    throw new Error(data.error);
                }

                // Fetch occupied slots for visual feedback
                const occupiedResponse = await fetch(
                    `/booking/api/occupied-slots?stylist_id=${bookingData.stylistId}&date=${bookingData.date}`
                );
                const occupiedData = await occupiedResponse.json();
                const occupiedTimes = new Set(occupiedData.occupiedSlots || []);

                container.innerHTML = '';

                if (data.slots.length === 0) {
                    container.innerHTML = '<div class="error-message">No available times for this date. Please go back and select another date or stylist.</div>';
                    return;
                }

                // Get current time for filtering
                const now = new Date();
                const currentHour = now.getHours();
                const currentMinute = now.getMinutes();

                data.slots.forEach(slot => {
                    const timeSlot = document.createElement('div');
                    timeSlot.className = 'time-slot';

                    // Parse slot time (HH:mm format)
                    const [slotHour, slotMinute] = slot.time.split(':').map(Number);

                    // Check if this slot is in the past (only for today)
                    const isPastSlot = isToday && (
                        slotHour < currentHour ||
                        (slotHour === currentHour && slotMinute <= currentMinute)
                    );

                    // Check if this slot is occupied
                    const isOccupied = occupiedTimes.has(slot.time);

                    if (isPastSlot || isOccupied) {
                        timeSlot.classList.add('unavailable');
                    } else {
                        if (bookingData.time === slot.time) {
                            timeSlot.classList.add('selected');
                        }
                        timeSlot.onclick = () => selectTime(slot.time, slot.display);
                    }

                    timeSlot.textContent = slot.display;
                    container.appendChild(timeSlot);
                });
            } catch (error) {
                container.innerHTML = `<div class="error-message">Error loading times: ${error.message}</div>`;
            }
        }

        function selectTime(time, display) {
            bookingData.time = time;

            document.querySelectorAll('.time-slot').forEach(slot => {
                slot.classList.remove('selected');
            });
            event.currentTarget.classList.add('selected');

            document.getElementById('continueToConfirm').disabled = false;
        }

        function setupSelectionListeners() {
            // Service selection
            document.querySelectorAll('[data-service-id]').forEach(card => {
                card.onclick = function() {
                    document.querySelectorAll('[data-service-id]').forEach(c =>
                        c.classList.remove('selected'));
                    this.classList.add('selected');

                    bookingData.serviceId = this.dataset.serviceId;
                    bookingData.serviceName = this.querySelector('h4').textContent;
                    bookingData.duration = this.dataset.duration;
                    bookingData.price = this.dataset.price;
                    bookingData.time = null; // Reset time when service changes

                    document.getElementById('continueToStylist').disabled = false;
                };
            });

            // Stylist selection
            document.querySelectorAll('[data-stylist-id]').forEach(card => {
                card.onclick = function() {
                    document.querySelectorAll('[data-stylist-id]').forEach(c =>
                        c.classList.remove('selected'));
                    this.classList.add('selected');

                    bookingData.stylistId = this.dataset.stylistId;
                    bookingData.stylistName = this.querySelector('h4').textContent;
                    bookingData.time = null; // Reset time when stylist changes

                    document.getElementById('continueToTime').disabled = false;
                };
            });
        }

        function setupNavigationListeners() {
            // Week navigation
            document.getElementById('prevWeek').onclick = () => {
                currentWeekStart.setDate(currentWeekStart.getDate() - 7);
                renderWeek();
            };

            document.getElementById('nextWeek').onclick = () => {
                currentWeekStart.setDate(currentWeekStart.getDate() + 7);
                renderWeek();
            };

            // Section navigation
            document.getElementById('continueToService').onclick = () => showSection(2);
            document.getElementById('backToDate').onclick = () => showSection(1);

            document.getElementById('continueToStylist').onclick = () => showSection(3);
            document.getElementById('backToService').onclick = () => showSection(2);

            document.getElementById('continueToTime').onclick = () => {
                showSection(4);
                loadTimeSlots();
            };
            document.getElementById('backToStylist').onclick = () => showSection(3);

            document.getElementById('continueToConfirm').onclick = () => {
                updateSummary();
                showSection(5);
            };
            document.getElementById('backToTime').onclick = () => {
                showSection(4);
                loadTimeSlots();
            };

            document.getElementById('confirmBooking').onclick = confirmBooking;
        }

        function showSection(sectionNumber) {
            // Hide all sections
            document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
            document.querySelectorAll('.step').forEach(s => {
                s.classList.remove('active');
                s.classList.remove('completed');
            });

            // Show current section
            document.getElementById(`section-${sectionNumber}`).classList.add('active');
            document.getElementById(`step-${sectionNumber}`).classList.add('active');

            // Mark previous steps as completed
            for (let i = 1; i < sectionNumber; i++) {
                document.getElementById(`step-${i}`).classList.add('completed');
            }

            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function updateSummary() {
            // FIX: Parse as local date
            const [year, month, day] = bookingData.date.split('-');
            const date = new Date(year, month - 1, day);
            const dateStr = date.toLocaleDateString('en-US', {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });

            document.getElementById('summary-date').textContent = dateStr;
            document.getElementById('summary-time').textContent = bookingData.time;
            document.getElementById('summary-service').textContent = bookingData.serviceName;
            document.getElementById('summary-stylist').textContent = bookingData.stylistName;
            document.getElementById('summary-duration').textContent = `${bookingData.duration} minutes`;
            document.getElementById('summary-price').textContent = `$${bookingData.price}`;
        }

        async function confirmBooking() {
            const btn = document.getElementById('confirmBooking');
            const alertContainer = document.getElementById('alert-container');
            alertContainer.innerHTML = '';

            btn.disabled = true;
            btn.innerHTML = '<span class="loading"></span> Processing...';

            try {
                // Generate reCAPTCHA token if enabled
                let recaptchaToken = null;
                if (RECAPTCHA_ENABLED && typeof grecaptcha !== 'undefined') {
                    recaptchaToken = await grecaptcha.execute(RECAPTCHA_SITE_KEY, {
                        action: 'booking_create'
                    });
                }

                const payload = {
                    stylist_id: bookingData.stylistId,
                    service_id: bookingData.serviceId,
                    booking_date: bookingData.date,
                    booking_time: bookingData.time,
                    notes: document.getElementById('notes').value
                };

                if (RECAPTCHA_ENABLED && recaptchaToken) {
                    payload.recaptcha_token = recaptchaToken;
                }

                const response = await fetch('/booking/create', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    credentials: 'same-origin',
                    body: JSON.stringify(payload)
                });

                const result = await response.json();

                if (result.success) {
                    // Show success view with calendar
                    showSuccessView();
                } else {
                    throw new Error(result.error || 'Booking failed');
                }
            } catch (error) {
                alertContainer.innerHTML = `<div class="alert alert-error">‚úó ${error.message}</div>`;
                btn.disabled = false;
                btn.innerHTML = 'Confirm Booking ‚úì';
            }
        }

        // Calendar state for success view
        let calendarCurrentMonth = new Date();

        function showSuccessView() {
            // Hide booking form
            document.querySelector('.booking-steps').style.display = 'none';
            document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));

            // Show success view
            document.getElementById('successView').classList.add('active');

            // Populate final details
            const [year, month, day] = bookingData.date.split('-');
            const date = new Date(year, month - 1, day);
            const dateStr = date.toLocaleDateString('en-US', {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });

            document.getElementById('final-date').textContent = dateStr;
            document.getElementById('final-time').textContent = bookingData.time;
            document.getElementById('final-service').textContent = bookingData.serviceName;
            document.getElementById('final-stylist').textContent = bookingData.stylistName;
            document.getElementById('final-duration').textContent = `${bookingData.duration} minutes`;
            document.getElementById('final-price').textContent = `$${bookingData.price}`;

            // Set calendar to booked month
            calendarCurrentMonth = new Date(year, month - 1, 1);
            renderCalendar();

            // Setup calendar navigation
            document.getElementById('calendarPrev').onclick = () => {
                calendarCurrentMonth.setMonth(calendarCurrentMonth.getMonth() - 1);
                renderCalendar();
            };

            document.getElementById('calendarNext').onclick = () => {
                calendarCurrentMonth.setMonth(calendarCurrentMonth.getMonth() + 1);
                renderCalendar();
            };

            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function renderCalendar() {
            const monthNames = ["January", "February", "March", "April", "May", "June",
                "July", "August", "September", "October", "November", "December"];
            const dayNames = ["Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"];

            // Update header
            document.getElementById('calendarMonth').textContent =
                `${monthNames[calendarCurrentMonth.getMonth()]} ${calendarCurrentMonth.getFullYear()}`;

            // Get first day of month and number of days
            const firstDay = new Date(calendarCurrentMonth.getFullYear(), calendarCurrentMonth.getMonth(), 1);
            const lastDay = new Date(calendarCurrentMonth.getFullYear(), calendarCurrentMonth.getMonth() + 1, 0);
            const daysInMonth = lastDay.getDate();
            const startingDayOfWeek = firstDay.getDay();

            // Get today
            const today = new Date();
            today.setHours(0, 0, 0, 0);

            // Parse booked date
            const [bookedYear, bookedMonth, bookedDay] = bookingData.date.split('-');
            const bookedDate = new Date(bookedYear, bookedMonth - 1, bookedDay);
            bookedDate.setHours(0, 0, 0, 0);

            const grid = document.getElementById('calendarGrid');
            grid.innerHTML = '';

            // Add day headers
            dayNames.forEach(dayName => {
                const header = document.createElement('div');
                header.className = 'calendar-day-header';
                header.textContent = dayName;
                grid.appendChild(header);
            });

            // Add empty cells for days before month starts
            for (let i = 0; i < startingDayOfWeek; i++) {
                const emptyDay = document.createElement('div');
                emptyDay.className = 'calendar-day other-month';
                grid.appendChild(emptyDay);
            }

            // Add days of the month
            for (let day = 1; day <= daysInMonth; day++) {
                const dayDate = new Date(calendarCurrentMonth.getFullYear(), calendarCurrentMonth.getMonth(), day);
                dayDate.setHours(0, 0, 0, 0);

                const dayCell = document.createElement('div');
                dayCell.className = 'calendar-day';

                // Check if this is today
                if (dayDate.getTime() === today.getTime()) {
                    dayCell.classList.add('today');
                }

                // Check if this is the booked date
                const isBooked = dayDate.getTime() === bookedDate.getTime();
                if (isBooked) {
                    dayCell.classList.add('booked');
                }

                // Create day number
                const dayNumber = document.createElement('div');
                dayNumber.className = 'calendar-day-number';
                dayNumber.textContent = day;
                dayCell.appendChild(dayNumber);

                // Add time if this is the booked date
                if (isBooked) {
                    const timeLabel = document.createElement('div');
                    timeLabel.className = 'calendar-day-time';
                    timeLabel.textContent = bookingData.time;
                    dayCell.appendChild(timeLabel);
                }

                grid.appendChild(dayCell);
            }
        }

        // My Bookings Modal Functionality
        let myBookingsCurrentMonth = new Date();
        let userBookingsData = [];

        document.getElementById('openMyBookings').onclick = function() {
            document.getElementById('myBookingsModal').classList.add('active');
            myBookingsCurrentMonth = new Date();
            loadUserBookings();
        };

        document.getElementById('closeMyBookings').onclick = function() {
            document.getElementById('myBookingsModal').classList.remove('active');
        };

        // Close modal when clicking outside
        document.getElementById('myBookingsModal').onclick = function(e) {
            if (e.target === this) {
                this.classList.remove('active');
            }
        };

        document.getElementById('myBookingsCalendarPrev').onclick = () => {
            myBookingsCurrentMonth.setMonth(myBookingsCurrentMonth.getMonth() - 1);
            renderMyBookingsCalendar();
        };

        document.getElementById('myBookingsCalendarNext').onclick = () => {
            myBookingsCurrentMonth.setMonth(myBookingsCurrentMonth.getMonth() + 1);
            renderMyBookingsCalendar();
        };

        async function loadUserBookings() {
            try {
                const startOfMonth = new Date(myBookingsCurrentMonth.getFullYear(), myBookingsCurrentMonth.getMonth(), 1);
                const endOfMonth = new Date(myBookingsCurrentMonth.getFullYear(), myBookingsCurrentMonth.getMonth() + 1, 0);

                const response = await fetch(
                    `/booking/api/user-bookings?start=${startOfMonth.toISOString().split('T')[0]}&end=${endOfMonth.toISOString().split('T')[0]}`
                );
                const data = await response.json();

                userBookingsData = data.bookings || [];
                renderMyBookingsCalendar();
            } catch (error) {
                console.error('Error loading user bookings:', error);
                document.getElementById('myBookingsCalendarGrid').innerHTML =
                    '<div class="error-message">Error loading bookings. Please try again.</div>';
            }
        }

        function renderMyBookingsCalendar() {
            const monthNames = ["January", "February", "March", "April", "May", "June",
                "July", "August", "September", "October", "November", "December"];
            const dayNames = ["Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"];

            // Update header
            document.getElementById('myBookingsCalendarMonth').textContent =
                `${monthNames[myBookingsCurrentMonth.getMonth()]} ${myBookingsCurrentMonth.getFullYear()}`;

            // Get first day of month and number of days
            const firstDay = new Date(myBookingsCurrentMonth.getFullYear(), myBookingsCurrentMonth.getMonth(), 1);
            const lastDay = new Date(myBookingsCurrentMonth.getFullYear(), myBookingsCurrentMonth.getMonth() + 1, 0);
            const daysInMonth = lastDay.getDate();
            const startingDayOfWeek = firstDay.getDay();

            // Get today
            const today = new Date();
            today.setHours(0, 0, 0, 0);

            // Create a map of bookings by date (FIX: Use the date string directly from DB)
            const bookingsByDate = new Map();
            userBookingsData.forEach(booking => {
                // booking.date is already in YYYY-MM-DD format from the backend
                const bookingDate = booking.date;
                if (!bookingsByDate.has(bookingDate)) {
                    bookingsByDate.set(bookingDate, []);
                }
                bookingsByDate.get(bookingDate).push(booking);
            });

            const grid = document.getElementById('myBookingsCalendarGrid');
            grid.innerHTML = '';

            // Add day headers
            dayNames.forEach(dayName => {
                const header = document.createElement('div');
                header.className = 'calendar-day-header';
                header.textContent = dayName;
                grid.appendChild(header);
            });

            // Add empty cells for days before month starts
            for (let i = 0; i < startingDayOfWeek; i++) {
                const emptyDay = document.createElement('div');
                emptyDay.className = 'calendar-day other-month';
                grid.appendChild(emptyDay);
            }

            // Add days of the month
            for (let day = 1; day <= daysInMonth; day++) {
                const dayDate = new Date(myBookingsCurrentMonth.getFullYear(), myBookingsCurrentMonth.getMonth(), day);
                dayDate.setHours(0, 0, 0, 0);

                // FIX: Manually construct the date string to avoid timezone issues
                const year = dayDate.getFullYear();
                const month = String(dayDate.getMonth() + 1).padStart(2, '0');
                const dayStr = String(dayDate.getDate()).padStart(2, '0');
                const dateStr = `${year}-${month}-${dayStr}`;

                const dayBookings = bookingsByDate.get(dateStr) || [];

                const dayCell = document.createElement('div');
                dayCell.className = 'calendar-day';

                // Check if this is today
                if (dayDate.getTime() === today.getTime()) {
                    dayCell.classList.add('today');
                }

                // Check if this day has bookings
                if (dayBookings.length > 0) {
                    dayCell.classList.add('booked');
                }

                // Create day number
                const dayNumber = document.createElement('div');
                dayNumber.className = 'calendar-day-number';
                dayNumber.textContent = day;
                dayCell.appendChild(dayNumber);

                // Add time if there are bookings
                if (dayBookings.length > 0) {
                    dayBookings.forEach(booking => {
                        const timeLabel = document.createElement('div');
                        timeLabel.className = 'calendar-day-time';
                        timeLabel.textContent = booking.time;
                        dayCell.appendChild(timeLabel);
                    });
                }

                grid.appendChild(dayCell);
            }

            // Render bookings list
            renderBookingsList();
        }

        function renderBookingsList() {
            const container = document.getElementById('myBookingsListContainer');

            if (userBookingsData.length === 0) {
                container.innerHTML = `
                    <div class="no-bookings">
                        <div class="no-bookings-icon">üìÖ</div>
                        <h3>No bookings found</h3>
                        <p>You don't have any bookings for this month.</p>
                    </div>
                `;
                return;
            }

            let html = '<div style="margin-top: 30px;">';
            html += '<h3 style="font-size: 20px; font-weight: 700; margin-bottom: 20px; color: #333;">Your Appointments</h3>';

            userBookingsData.forEach(booking => {
                const [year, month, day] = booking.date.split('-');
                const date = new Date(year, month - 1, day);
                const dateStr = date.toLocaleDateString('en-US', {
                    weekday: 'long',
                    month: 'long',
                    day: 'numeric',
                    year: 'numeric'
                });

                html += `
                    <div class="booking-list-item" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 15px; padding: 20px; margin-bottom: 15px;">
                        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px; flex-wrap: wrap; gap: 10px;">
                            <h4 style="font-size: 18px; font-weight: 700; margin: 0;">${booking.service}</h4>
                            <span style="background: rgba(255, 255, 255, 0.2); padding: 5px 12px; border-radius: 8px; font-size: 12px; font-weight: 600;">${booking.status}</span>
                        </div>
                        <div class="booking-details-grid" style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 10px; font-size: 14px;">
                            <div><strong>Date:</strong> ${dateStr}</div>
                            <div><strong>Time:</strong> ${booking.time}</div>
                            <div><strong>Stylist:</strong> ${booking.stylist}</div>
                            <div><strong>Price:</strong> $${booking.price}</div>
                        </div>
                    </div>
                `;
            });

            html += '</div>';
            container.innerHTML = html;
        }
    </script>
